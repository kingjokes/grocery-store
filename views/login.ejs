<%- include('./templates/header') %>

<div class="w3-top header mb-5" style=" padding:10px 20px">
    <div class="w3-bar">
        <div class="w3-left">
            <div class="w3-bar-item">
                <a href="/" style="text-decoration: none">
                    <span class="w3-large">Grocery Store</span>
                </a>
            </div>
        </div>
        <div class="w3-right">
            <div class="w3-bar-item">
                <a href="<%= void(0) %>">
                    <i class="fa fa-shopping-cart w3-xlarge"></i>
                </a>
            </div>
        </div>
    </div>
</div>
<div class="w3-padding-64" >
    <br><br>
    <div class="row w3-padding">
        <div class="col-12 col-md-1 col-lg-1 col-sm-1">
            &nbsp;
        </div>
        <div class="col-12 col-md-4 col-lg-4 col-sm-4 w3-padding">
            <% if(errorMessage !== ''){%>
                <div id="errorMessage" class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <span>Error: <%- errorMessage%></span>
                </div>
            <% } %>
            <div class="form-holder">
                <div id="success" class="alert alert-success alert-dismissible"  style="display: none">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>

                </div>
                <div id="error" class="alert alert-danger alert-dismissible" style="display: none">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>

                </div>
                <p style="margin: 0 0 16px;    font-size: 2rem; font-family: Barlow, sans-serif; font-weight: 700; line-height: 1.5; ">Login</p>
                <p style="line-height: 1.85714; font-size: 0.875rem;">
                    <span style="color: rgb(99, 115, 129);">Don't have an account? </span>
                    <a href="/register" style="color: rgb(0, 171, 85);;!important; font-weight: 600">Get Started</a>
                </p>
                <div>
                    <form id="login-form" method="post" action="/user/login">
                        <input name="email" type="email" required class="input" placeholder="Email">
                        <br>
                        <input name="password" type="password" required class="input" placeholder="Password">
                        <br>
                        <button id="login_button" class="w3-btn login-button w3-block" style="width: 100%!important;">Login</button>
                    </form>
                </div>
                <br>
                &nbsp;
            </div>

        </div>
        <div class="col-12 col-md-6 col-lg-6 col-sm-6 w3-hide-small">
            <img class="w3-image" src="/public/img/bg.png">
        </div>

        <div class="col-12 col-md-1 col-lg-1 col-sm-1">
            &nbsp;
        </div>
    </div>
</div>


<%- include('./templates/footer') %>